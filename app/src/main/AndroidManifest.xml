<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kamusjaringan">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.DetailActivity"
            android:parentActivityName=".view.ProcessDetailActivity"></activity>
        <activity
            android:name=".view.ProcessDetailActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".view.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ProcessDictionaryActivity" />
        <activity
            android:name=".view.DictionaryActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".view.AboutActivity" />
        <activity android:name=".view.MainActivity"></activity>
    </application>

</manifest>